@using Gleen.Models;
@model Candidate

<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName"class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <select name="Age" class="form-control">
            <option value ="18">18</option>
            <option value ="19">19</option>
            <option value ="20">20</option>
            <option value ="21">21</option>
            <option value ="22">22</option>
        </select>
    </div>
    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked />
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
            <label>ASP.NET Core API</label>
        </p>

        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Front-End Yazılım Uzmanlığı" />
            <label>Front-End Yazılım Uzmanlığı</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type ="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>